{
  "name": "chrono:-temporal-social-network",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build && tsc -p server/tsconfig.json && node server/copy-assets.js",
    "start": "node server/dist/index.js",
    "preview": "vite preview",
    "dev:server": "tsx watch server/src/index.ts",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "install:all": "npm install && cd server && npm install"
  },
  "dependencies": {
    "@google/genai": "^1.25.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^8.2.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
