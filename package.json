{
  "name": "chrono:-temporal-social-network",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build && echo 'Frontend built' && tsc -p server/tsconfig.json && echo 'Backend built' && node server/copy-assets.js && echo 'Assets copied'",
    "start": "node server/dist/index.js",
    "db:migrate": "node server/dist/db/migrate.js",
    "db:migrate-data": "tsx server/src/scripts/migrate-data.ts",
    "db:seed": "node server/dist/db/seed.js",
    "preview": "vite preview",
    "dev:server": "tsx watch server/src/index.ts",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "db:start": "docker-compose up -d postgres",
    "db:stop": "docker-compose down",
    "test": "vitest run",
    "install:all": "npm install && cd server && npm install"
  },
  "dependencies": {
    "@google/genai": "^1.25.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.14.0",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@vitejs/plugin-react": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "emoji-regex": "^10.6.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.11",
    "pg": "^8.11.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "concurrently": "^8.2.2",
    "jsdom": "^28.0.0",
    "tsx": "^4.7.0",
    "vitest": "^4.0.18"
  }
}
